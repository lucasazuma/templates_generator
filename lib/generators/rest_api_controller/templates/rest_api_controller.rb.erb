class Api::<%= class_name %>Controller < Api::ApiController
  def create
    @<%= singular_name %> = <%= class_name %>.create
    render json: @<%= singular_name %>, status: :ok
  end

  def update
    @<%= singular_name %> = <%= class_name %>.update
    render json: @<%= singular_name %>, status: :ok
  end

  def destroy
    @<%= singular_name %> = <%= class_name %>.find(params[:id])
    @<%= singular_name %>.destroy!
  end

  def index
    @<%= singular_name %> = <%= class_name %>.find(params[:id])
    render json: @<%= singular_name %>, status: :ok
  end

  def show
    @<%= singular_name %> = <%= class_name %>.find(params[:id])
    render json: @<%= singular_name %>, status: :ok
  end

  private
  def <%= singular_name %>_params
    params.require(:<%= singular_name %>).permit(<%= editable_attributes.map { |a| ':' + a.name }.join(', ') %>)
  end
end